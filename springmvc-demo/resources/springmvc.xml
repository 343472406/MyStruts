<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
						http://www.springframework.org/schema/mvc/spring-mvc.xsd
						http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- 单独配置HelloController -->
	<!-- 名字一定要加上斜杠	/name -->
	<!-- <bean name="/hello" class="com.cynthia.demo.controller.HelloController" /> -->
	
	 
 	<!-- 配置注解驱动：支持所有mvc注解，支持json -->
	<!-- <mvc:annotation-driven /> -->
	<!-- 全注解 -->
	<!-- <context:component-scan base-package="com.cynthia"></context:component-scan> -->
	
	<!-- 处理静态资源	将静态资源放行，还给tomcat处理 -->
	<!-- <mvc:default-servlet-handler/> -->
	
	<!-- 配置文件上传解析器	id/name必须为multipartResolver -->
	<!-- <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"> -->
		<!-- 配置文件上传限制大小： 单位Bytes字节 -->
		<!--
			1m		= 1024kb
			1kb		= 1024byte
			1byte	= 8bit 
		 -->
		<!-- <property name="maxUploadSize" value="#{1024 * 1024}" />
	</bean>
	 -->
	<!-- 配置视图解析器 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
	<!-- 配置拦截器 -->
	<mvc:interceptors>
		<!-- 具体拦截器配置 -->
		<mvc:interceptor>
			<!-- 
				注意：SpringMVC的拦截器只会拦截【SpringMVC控制器的方法】，不会拦截其他任何和资源
					jsp,html,css,js等不拦截
				要拦截的资源：
					/** 拦截所有的资源
					/user/** 拦截user模块下面的所有资源
			 -->
			<mvc:mapping path="/**"/>
			
			<!-- 要放行的资源
				多个资源可以使用逗号隔开
				/user/login.do,xxx/abc.do
			 -->
			<mvc:exclude-mapping path="/user/login.do"/>
			
			<!-- 具体拦截器 -->
			<bean class="com.cynthia.springMybatis.interceptor.CheckLoginIntercpetor"/>
		</mvc:interceptor>
	</mvc:interceptors>
</beans>
